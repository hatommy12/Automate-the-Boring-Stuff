def collatz(number):
  if number % 2 == 0:
    results = number // 2
    print(results)
    return results
  else:
    results = (3 * number) + 1
    print(results)
    return results


try:
  user_input = int(input("Enter Number: \n"))
  
  number_isnt_one = True
  while number_isnt_one:
    if user_input == 1:
      number_isnt_one = False
    else:
      user_input = collatz(user_input)

except:
  print("Please enter an proper integer.")
